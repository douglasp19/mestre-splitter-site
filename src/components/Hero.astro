<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 80px 40px;
    overflow: hidden;
  }

  .grid-bg {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(var(--border) 1px, transparent 1px),
      linear-gradient(90deg, var(--border) 1px, transparent 1px);
    background-size: 48px 48px;
    opacity: 0.25;
    mask-image: radial-gradient(ellipse 80% 80% at 50% 50%, black 30%, transparent 100%);
    -webkit-mask-image: radial-gradient(ellipse 80% 80% at 50% 50%, black 30%, transparent 100%);
  }

  .glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -60%);
    width: 700px;
    height: 700px;
    background: radial-gradient(circle, rgba(0, 255, 204, 0.06) 0%, transparent 70%);
    pointer-events: none;
  }

  .hero-inner {
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
    max-width: 1100px;
    width: 100%;
    animation: fadeUp 0.8s ease both;
  }

  @keyframes fadeUp {
    from { opacity: 0; transform: translateY(32px); }
    to   { opacity: 1; transform: translateY(0); }
  }

  /* TEXTO */
  .text-col { order: 1; }

  .badge-top {
    display: flex;
    width: fit-content;
    align-items: center;
    gap: 8px;
    background: var(--neon-green-dim);
    border: 1px solid rgba(0, 255, 204, 0.2);
    color: var(--neon-green);
    font-size: 0.8rem;
    font-weight: 500;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    padding: 6px 16px;
    border-radius: 100px;
    margin: 0 auto 28px auto;
  }

  .dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: var(--neon-green);
    box-shadow: 0 0 8px var(--neon-green);
    animation: pulse 2s infinite;
    flex-shrink: 0;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.4; }
  }

  h1 {
    font-size: clamp(2rem, 4vw, 3.6rem);
    font-weight: 900;
    line-height: 1.08;
    letter-spacing: -2px;
    margin-bottom: 20px;
    color: var(--text-light);
    text-align: left;
  }

  .highlight {
    color: var(--neon-green);
    display: block;
    text-shadow: 0 0 40px rgba(0, 255, 204, 0.3);
  }

  p {
    color: var(--text-gray);
    font-size: 1.05rem;
    line-height: 1.7;
    margin-bottom: 36px;
    max-width: 480px;
    text-align: left;
  }

  p strong { color: var(--text-light); }

  .button-group {
    display: flex;
    gap: 14px;
    flex-wrap: wrap;
    margin-bottom: 48px;
    justify-content: flex-start;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 14px 28px;
    border-radius: 8px;
    font-weight: 700;
    font-size: 0.95rem;
    text-decoration: none;
    transition: all 0.2s ease;
    letter-spacing: 0.02em;
    font-family: "DM Sans", sans-serif;
  }

  .btn-buy { background: var(--neon-green); color: #080b10; border: none; }
  .btn-buy:hover { transform: translateY(-2px); box-shadow: 0 0 28px rgba(0, 255, 204, 0.45); }
  .btn-demo { background: transparent; color: var(--text-light); border: 1px solid var(--border); }
  .btn-demo:hover { border-color: rgba(0, 255, 204, 0.4); color: var(--neon-green); transform: translateY(-2px); }

  .stats-wrapper { text-align: center; }

  .stats {
    display: inline-flex;
    align-items: center;
    gap: 28px;
    background: var(--panel-dark);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 18px 28px;
  }

  .stat { display: flex; flex-direction: column; align-items: center; gap: 4px; }
  .stat-value { font-family: "Syne", sans-serif; font-size: 1.6rem; font-weight: 900; color: var(--neon-green); }
  .stat-label { font-size: 0.75rem; color: var(--text-gray); text-transform: uppercase; letter-spacing: 0.08em; }
  .divider { width: 1px; height: 32px; background: var(--border); }

  /* MASCOTE */
  .mascot-col {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    order: 2;
    gap: 20px;
  }

  .mascot-wrapper {
    position: relative;
    display: flex;
    justify-content: center;
  }

  .mascote-glow {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 340px;
    height: 340px;
    background: radial-gradient(circle, rgba(0, 255, 204, 0.12) 0%, transparent 70%);
    pointer-events: none;
    border-radius: 50%;
  }

  .mascot-img {
    width: 100%;
    max-width: 440px;
    height: auto;
    mix-blend-mode: screen;
    filter: drop-shadow(0 0 32px rgba(0, 255, 204, 0.2));
    animation: float 5s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50%       { transform: translateY(-14px); }
  }

  /* PRICE TAG */
  .price-tag {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    background: var(--card-bg);
    border: 1px solid rgba(0, 255, 204, 0.25);
    border-radius: 14px;
    padding: 16px 28px;
    animation: float 5s ease-in-out infinite;
    animation-delay: 0.5s;
    box-shadow: 0 0 30px rgba(0, 255, 204, 0.06), inset 0 1px 0 rgba(255,255,255,0.04);
  }

  .price-label {
    font-size: 0.78rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--neon-green);
  }

  .price-row {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .price-old {
    font-family: "Syne", sans-serif;
    font-size: 1.1rem;
    color: var(--text-gray);
    text-decoration: line-through;
    text-decoration-color: rgba(255, 80, 80, 0.7);
    text-decoration-thickness: 2px;
  }

  .price-arrow {
    color: var(--text-gray);
    font-size: 0.9rem;
  }

  .price-new {
    font-family: "Syne", sans-serif;
    font-size: 2rem;
    font-weight: 900;
    color: var(--neon-green);
    text-shadow: 0 0 20px rgba(0, 255, 204, 0.4);
  }

  .price-sub {
    font-size: 0.72rem;
    color: var(--text-gray);
    letter-spacing: 0.04em;
  }

  /* MOBILE */
  @media (max-width: 768px) {
    .hero { padding: 60px 24px 80px; }

    .hero-inner {
      grid-template-columns: 1fr;
      gap: 0;
    }

    .mascot-col { order: -1; margin-bottom: 8px; }
    .mascot-img { max-width: 240px; }

    .text-col { order: 1; text-align: center; }
    h1, p { text-align: center; }
    p { max-width: 100%; }
    .button-group { justify-content: center; }
    .stats { width: 100%; justify-content: center; }
  }
</style>