  .cta-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: #00ffcc;
    box-shadow: 0 0 8px #00ffcc;
    animation: ctaPulse 2s infinite;
    flex-shrink: 0;
  }

  @keyframes ctaPulse {
    0%, 100% { opacity: 1; }
