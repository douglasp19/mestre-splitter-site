---
interface Props {
  badge: string;
  title: string;
  description: string;
  icon: string;
}

const { badge, title, description, icon } = Astro.props;
---

<div class="card">
  <div class="card-icon">{icon}</div>
  <div class="card-content">
    <span class="badge">{badge}</span>
    <h3>{title}</h3>
    <p>{description}</p>
  </div>
</div>

<style>
  .card {
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: 16px;
    padding: 32px 28px;
    min-width: 300px;
    max-width: 320px;
    flex-shrink: 0;
    display: flex;
    flex-direction: column;
    gap: 20px;
    transition: border-color 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, transparent, var(--neon-green), transparent);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .card:hover {
    border-color: rgba(0, 255, 204, 0.3);
    transform: translateY(-6px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4), 0 0 20px rgba(0,255,204,0.05);
  }

  .card:hover::before {
    opacity: 1;
  }

  .card-icon {
    font-size: 2.2rem;
    line-height: 1;
    filter: drop-shadow(0 0 12px rgba(0,255,204,0.4));
  }

  .badge {
    display: inline-block;
    padding: 3px 12px;
    border-radius: 100px;
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    background: var(--neon-green-dim);
    color: var(--neon-green);
    border: 1px solid rgba(0,255,204,0.2);
    font-family: 'Space Mono', monospace;
    margin-bottom: 10px;
  }

  .card-content {
    display: flex;
    flex-direction: column;
  }

  h3 {
    font-size: 1.3rem;
    font-weight: 800;
    color: #e2e8f0;
    margin-bottom: 10px;
    line-height: 1.2;
  }

  p {
    font-size: 0.9rem;
    color: var(--text-gray);
    line-height: 1.65;
  }
</style>